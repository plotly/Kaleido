{
  "extends": [
    "config:recommended",
    ":enablePreCommit",
    ":automergeMinor",
    ":dependencyDashboard",
    ":semanticCommits",
    ":pinVersions"
  ],
  "enabledManagers": [
    "pip_requirements",
    "github-actions"
  ],
  "timezone": "Asia/Dubai",
  "schedule": [
    "before 10am on wednesday"
  ],
  "packageRules": [
    {
      "matchManagers": ["pre-commit"],
      "matchPaths": ["src/py/.pre-commit-config.yaml"]
    },
    {
      "matchManagers": ["pep621"],
      "matchPaths": ["scr/py/pyproject.toml"]
    }
  ]
}
